<% content_for :title do %>
    <%= t('.service_registers') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-balance-scale"></i> <%= t('.service_registers') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_finances.new_backend_service_register_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_finances.list_backend_service_registers_path,
    keywords: [
        {
            text: t('.name'), name: 'erp_finances_service_registers.name'
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-trash"></i> '+t('.delete'),
            url: erp_finances.delete_all_backend_service_registers_path,
            data_method: 'DELETE',
            data_confirm: t('delete_confirm')
        }
    ],
    filters: [
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('.user_name'), name: 'user_name', value: true, checked: true
        },
        {
            text: t('.service_name'), name: 'service_name', value: true, checked: true
        },
        {
            text: t('.price'), name: 'price', value: true, checked: true
        },
        {
            text: t('.time'), name: 'time', value: true, checked: true
        },
        {
            text: t('status'), name: 'status', value: true, checked: true
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: false
        }
    ],
    sort: { sort_by: 'erp_finances_service_registers.created_at', sort_direction: 'desc' }
) %>