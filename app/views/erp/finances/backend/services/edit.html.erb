<% content_for :title do %>
    <%= @service.name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_finances.backend_services_path %>">
    <i class="fa fa-balance-scale"></i> <%= t('.services') %>
    </a> / <%= @service.name %>
<% end %>

<% if can? :create, Erp::Finances::Service %>
    <% content_for :page_toolbar do %>
        <%= erp_component('button/create', {
            text: t('.create'),
            href: erp_finances.new_backend_service_path,
            class: 'btn-noborder'
        }) %>
    <% end %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @service.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form', service: @service %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>